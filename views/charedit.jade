doctype html
html(ng-app='editApp' ng-cloak)
  include partials/head.jade
  link(rel='stylesheet', type="text/css" href='/stylesheets/char.css')
  body(ng-controller='editctrl')
      include partials/navbar.jade
      .container
        -if(!user)
          h3 Viewing #{char} while offline.
        -else
          -if(username == user.username)
            h3 #{char} is your character #{username}.
          -else if(user)
            h3 Viewing #{char} as #{user.username}.
          .row
            form(class="navbar-form navbar" role="search")
                .form-group
                    input(type="text" class="form-control" placeholder="Search"
                    ng-model='pick_slot')
                button(type="submit" class="btn btn-default"
                ng-click="finditems()") Submit
        .row
          div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")
            .char_panel
              .row
                h1(class='pull-center') {{character.name}}
                h4(class='pull-center') {{character.class}}
                div(class='item_slot pull-left' id='head_slot')
                div(class='item_slot pull-right' id='hand_slot')
              .row
                div(class='item_slot pull-left' id='neck_slot')
                div(class='item_slot pull-right' id='belt_slot')
              .row
                div(class='item_slot pull-left' id='shoulders_slot')
                div(class='item_slot pull-right' id='legs_slot')
              .row
                div(class='item_slot pull-left' id='back_slot')
                div(class='item_slot pull-right' id='feet_slot')
              .row
                div(class='item_slot pull-left' id='chest_slot')
                div(class='item_slot pull-right' id='ring1_slot')
              .row
                div(class='item_slot pull-left' id='shirt_slot')
                div(class='item_slot pull-right' id='ring2_slot')
              .row
                div(class='item_slot pull-left' id='tabard_slot')
                div(class='item_slot pull-right' id='trinket1_slot')
              .row
                div(class='item_slot pull-left' id='bracer_slot')
                div(class='item_slot pull-right' id='trinket2_slot')
              .row
                ul(class='list-inline')
                  li: div(class='item_slot' id='mh_slot')
                  li: div(class='item_slot' id='oh_slot')
                  li: div(class='item_slot' id='ranged_slot')
          div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")
            .stats_sheet
              h3 Item stats here.



        .row
          table
              tr(ng-repeat="item in items")
                  td {{item.Name}}
                  td {{item.ItemLevel}}
                  td {{item.Quality}}
                  td: img(ng-src="/wowdata/tooltip_images/{{item.IconPath}}.jpg")

      div(class="items_container")
          div(class="item_tooltip")
          // Make this hidden, then show when hovering over item image.

  include partials/footer.jade
  script(src="/js/edit_controller.js")
