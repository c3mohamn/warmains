div(class='talents_view' ng-show="cur_view == 'talents'" ng-cloak)
  h1 Work in progress.
  div(class='talents_info')
    h3(ng-style="class_color(character.class)")
      {{talent_points.remaining}} ({{talent_points.left.total}}/{{talent_points.center.total}}/{{talent_points.right.total}})

  div(class='talent_tree' ng-if="character.class == 'death knight'")
    include talents/death knight.jade
  div(class='talent_tree' ng-if="character.class == 'druid'")
    include talents/druid.jade
  div(class='talent_tree' ng-if "character.class == 'hunter'")
    include talents/hunter.jade
  div(class='talent_tree' ng-if="character.class == 'mage'")
    include talents/mage.jade
  div(class='talent_tree' ng-if="character.class == 'paladin'")
    include talents/paladin.jade
  div(class='talent_tree' ng-if="character.class == 'priest'")
    include talents/priest.jade
  div(class='talent_tree' ng-if="character.class == 'rogue'")
    include talents/rogue.jade
  div(class='talent_tree' ng-if="character.class == 'shaman'")
    include talents/shaman.jade
  div(class='talent_tree' ng-if="character.class == 'warlock'")
    include talents/warlock.jade
  div(class='talent_tree' ng-if="character.class == 'warrior'")
    include talents/warrior.jade

  p(class='success-msg' ng-show="success_msg != ''") {{success_msg}}
  input(ng-if='permission' type="submit" value='Save Changes' ng-click='save_to_db()'
        class="save_item loginmodal-submit")
