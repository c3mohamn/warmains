  script(src='/js/charEdit/talent_tooltips/rogue.js')
  script(src='/js/charEdit/talent_tooltips/shaman.js')
  script(src='/js/charEdit/talent_tooltips/warlock.js')
  script(src='/js/charEdit/talent_tooltips/warrior.js')
