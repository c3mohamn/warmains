doctype html
html(ng-app='charApp' ng-cloak)
    include partials/head.jade
    body(ng-controller='charctrl')
        include partials/navbar.jade

        form(class="navbar-form navbar" role="search")
            div(class="form-group")
                input(type="text" class="form-control"
                placeholder="Search")
            button(type="submit" class="btn btn-default") Submit

        div(class="char_container")
            div(class="row")
                div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")
                    div(class="loginmodal-container" id="char-create")
                        h1 CREATE A CHARACTER
                        form(action="/chardev/charcreate" method="post")
                            input(type="text" name="Name" placeholder="Name"
                            maxlength=12)
                            label(class="pull-left") Class:
                            select(class="form-control" name="Class")
                                option Paladin
                                option Druid
                                option Shaman
                                option Hunter
                                option Warrior
                                option Rogue
                                option Mage
                                option Priest
                                option Warlock
                            br
                            textarea(class="form-control" rows=5  maxlength=255
                            name="description" placeholder="Description")
                            br
                            input(type="submit" name="createchar"
                            class="create loginmodal-submit"
                            value="Create Character")
                div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")

        h2 TODO:
        h1 Allow user to choose gear
        h1 Display stats gained from gear
        table(ng-init="img_path = '/wowdata/tooltip_images/'")
            tr(ng-repeat="item in backs")
                td {{item.Name}}
                td {{item.ItemLevel}}
                td {{item.Quality}}
                td: img(ng-src="/wowdata/tooltip_images/{{item.IconPath}}.jpg")

        div(class="items_container")
            div(class="item_tooltip")
            // Make this hidden, then show when hovering over item image.

        include partials/footer.jade
        script(src="/js/items_controller.js")
