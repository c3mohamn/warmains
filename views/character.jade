doctype html
html(ng-app='charApp' ng-cloak)
  link(rel='stylesheet', type="text/css" href='/stylesheets/char.css')
  include partials/head.jade
  body(ng-controller='charctrl')
      include partials/navbar.jade
      .container
          .row
            div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")
              h3 Existing characters here.
                div(class='existing_chars')
                  form(action='/character/delete' method='post')
                    select(multiple class='form-control' name='pickchar')
                      option(ng-repeat='char in characters' name='charname')
                        {{char.name}}
                    button(type="submit" class="btn btn-danger pull-left"
                    name='cbutton' value='del') Delete
                    button(type="submit" class="btn btn-info pull-left"
                    name='cbutton' value='edit') Edit
                br
                br
                div(class='existing_chars2')
                  table(ng-repeat='char in characters')
                    tbody
                      td: img(ng-src='/images/class-icons/{{char.class}}.png'
                              class='class_icon')
                      td: h3 {{char.name}}
            div(class="col-lg-6 col-md-6 col-sm-6 col-xs-12")
              .create_container
                div(class="loginmodal-container" id="char-create")
                  h1 CREATE A CHARACTER
                    form(action='/character/create' method='post')
                      input(type="text" name="Name" placeholder="Name"
                      maxlength=12)
                      label(class="pull-left") Class:
                      select(class="form-control" name="pickclass")
                        option(selected value='paladin') Paladin
                        option(value='druid') Druid
                        option(value='shaman') Shaman
                        option(value='hunter') Hunter
                        option(value='warrior') Warrior
                        option(value='rogue') Rogue
                        option(value='mage') Mage
                        option(value='priest') Priest
                        option(value='warlock') Warlock
                        option(value='deathknight') Death Knight
                      br
                      textarea(class="form-control" rows=5  maxlength=255
                      name="description" placeholder="Description")
                      br
                      input(type="submit" name="createchar"
                      class="create loginmodal-submit"
                      value="Create Character")

  include partials/footer.jade
  script(src="/js/char_controller.js")
